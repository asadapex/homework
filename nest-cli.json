{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/main-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/main-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/main-gateway",
  "projects": {
    "main-gateway": {
      "type": "application",
      "root": "apps/main-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/main-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main-gateway/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    }
  }
}